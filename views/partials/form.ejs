<form name="form1" id="form1" action="" method="POST">
    <div class="row g-3 form-top">
        <div class="col-sm">
            <input type="text" class="form-control" id="userName" name="userName" placeholder="Name"
                aria-label="userName" required>
        </div>
        <div class="col-sm">
            <input type="email" class="form-control" id="emailID" name="emailID" placeholder="abc@iitgn.ac.in"
                aria-label="emailID" required>
        </div>
        <div class="col-sm">
            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Phone Number"
                aria-label="phoneNumber" required>
        </div>
    </div>
    <div class="row g-3 form-top">
        <div class="col-sm">
            <select class="form-select" id="programme" name="programme" aria-label="Programme" required>
                <option value="" selected>Choose Programme</option>
            </select>
        </div>
        <div class="col-sm">
            <select class="form-select" aria-label="discipline" name="discipline" id="discipline" required>
                <option value="" selected>Choose Discipline (Choose Programme First)</option>
            </select>
        </div>
    </div>
    <div class="row g-3 form-top">
        <div class="col-sm">
            <select class="form-select" aria-label="Request type" name="requestType" id="requestType" required>
                <option value="">Select Request Type</option>
                <option value="Request type 1">Request type 1</option>
                <option value="Request type 2">Request type 2</option>
                <option value="Request type 3">Request type 3</option>
                <option value="Request type 4">Request type 4</option>
            </select>
        </div>
        <div class="col-sm">
            <input type="text" class="form-control" placeholder="Roll Number" id="rollNumber" name="rollNumber"
                aria-label="rollNumber" required>
        </div>
        <div class="mb-3">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" id="message" name="message"
                placeholder="Message (if any)"></textarea>
        </div>
    </div>
    <button class="btn btn-outline-primary" type="submit">Submit</button>
</form>